<%- include('./includes/head.ejs') %>

    </head>

    <body class="">
        <!-- Navbar -->

        <!-- End Navbar -->
        <main class="main-content  mt-0">
            <section>
                <div class="page-header min-vh-75">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column m-auto">
                                <div class="card card-plain mt-7">
                                    <div class="card-header pb-0 text-left bg-transparent">
                                        <h3 class="font-weight-bolder text-info text-gradient">Welcome back</h3>
                                        <p class="mb-0">Enter your email and password to sign in</p>
                                    </div>

                                    <div class="card-body" style="padding: 0 1.5rem 1.5rem 1.5rem">
                                        <form action="login" method="POST" role="form">
                                            <div class="row mt-2 mb-2 ">
                                                <div class="col-4 ms-auto px-1 form-check text-sm">
                                                    <a class="btn btn-outline-light w-100" href="">
                                                        <img src="/images/admin.png" class="avatar avatar-sm">
                                                    </a>
                                                    <input type="radio" required class="form-check-input ms-1" 
                                                        name="speedLogin" id="speedLoginA" value="Admin">
                                                        <label class="form-check-label mb-lg-1 text-info text-gradient font-weight-bold" style="font-size: auto;" for="speedLoginA">Admin</label>
                                                </div>
                                                <div class="col-4 px-1 form-check text-sm">
                                                    <a class="btn btn-outline-light w-100" href="javascript:;">
                                                        <img src="/images/mechanic.png" class="avatar avatar-sm">
                                                    </a>
                                                    <input type="radio" required class="form-check-input ms-1"
                                                    name="speedLogin" id="speedLoginM" value="Mechanic">
                                                    <label class="form-check-label mb-lg-1 text-primary text-gradient font-weight-bold" style="font-size:auto;" for="speedLoginM">Mechanic</label>
                                                </div>
                                                <div class="col-4 me-auto px-1 form-check text-sm">
                                                    <a class="btn btn-outline-light w-100" href="javascript:;">
                                                        <img src="/images/customer.png" class="avatar avatar-sm">
                                                    </a>
                                                    <input type="radio" required class="form-check-input ms-1 mx-auto "
                                                    name="speedLogin" id="speedLoginC" value="Customer">
                                                    <label class="form-check-label mb-lg-1 text-warning text-gradient font-weight-bold" style="font-size:auto;" for="speedLoginC">Customer</label>
                                                </div>
                                            </div>

                                            <label>Email <font style="color:red">*</font></label>
                                            <div class="mb-3">
                                                <input type="email" name="email" class="form-control"
                                                    placeholder="Email" aria-label="Email"
                                                    aria-describedby="email-addon" value="<%= oldValue.email %>">
                                                <% if (typeof alert !='undefined' ) { %>
                                                    <div role="alert"
                                                        style="color:red; font-size:smaller; text-align: justify;">
                                                        <%if(alert=='Email does not exist'){%>
                                                            <%= alert %>
                                                                <% } %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <label>Password <font style="color:red">*</font></label>
                                            <div class="mb-3">
                                                <input type="password" name="password" class="form-control "
                                                    placeholder="Password" aria-label="Password"
                                                    aria-describedby="password-addon">
                                                <div style="color:red; font-size:smaller; text-align: justify;">
                                                    <%= msg %>
                                                </div>
                                                <% if (typeof alert !='undefined' ) { %>
                                                    <div role="alert"
                                                        style="color:red; font-size:smaller; text-align: justify;">

                                                        <%if( alert=='Password Length must be 8 digit' ){%>
                                                            <%= alert %>
                                                                <% } %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="rememberMe"
                                                    checked="">
                                                <label class="form-check-label" for="rememberMe">Remember
                                                    me</label>
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Sign
                                                    in</button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                        <p class="pt-0 mb-0 text-sm mx-auto">
                                            <a href="sendEmail" class="text-info text-gradient font-weight-bold">Forget
                                                Password?</a>
                                        </p>
                                        <p class="mb-4 text-sm mx-auto">
                                            Don't have an account?
                                            <a href="signup" class="text-info text-gradient font-weight-bold">Sign
                                                up</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                                    <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6"
                                        style="background-image:url('/images/curved-images/curved11.jpg')"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <%- include('./includes/end.ejs') %>